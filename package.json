{
  "name": "polkadot-agent-kit",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.6.2",
  "description": "AI Agent Kit for Polkadot",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/your-username/polkadot-agent-kit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/polkadot-agent-kit.git"
  },
  "bugs": "https://github.com/your-username/polkadot-agent-kit/issues",
  "keywords": [
    "polkadot",
    "ai",
    "agent",
    "blockchain"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./agent": {
      "types": "./dist/agent/index.d.mts",
      "import": "./dist/agent/index.mjs",
      "require": "./dist/agent/index.cjs"
    },
    "./chain": {
      "types": "./dist/chain/index.d.mts",
      "import": "./dist/chain/index.mjs",
      "require": "./dist/chain/index.cjs"
    },
    "./langchain": {
      "types": "./dist/langchain/index.d.mts",
      "import": "./dist/langchain/index.mjs",
      "require": "./dist/langchain/index.cjs"
    },
    "./tools": {
      "types": "./dist/tools/index.d.mts",
      "import": "./dist/tools/index.mjs",
      "require": "./dist/tools/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.mts",
      "import": "./dist/types/index.mjs",
      "require": "./dist/types/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@langchain/community": "^0.3.19",
    "@langchain/core": "^0.3.40",
    "@langchain/langgraph": "^0.2.33",
    "@langchain/openai": "^0.3.17",
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-labs/hdkd": "^0.0.12",
    "@polkadot-labs/hdkd-helpers": "^0.0.12",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/util": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "@subsquid/ss58": "^2.0.2",
    "axios": "^1.6.7",
    "bs58": "^6.0.0",
    "dotenv": "^16.0.3",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.2",
    "express": "^4.18.2",
    "langchain": "^0.3.7",
    "marked": "^15.0.4",
    "nanoid": "^3.0.0",
    "node-fetch": "2",
    "openai": "^4.62.1",
    "polkadot-api": "^1.9.4",
    "postgres": "^3.4.5",
    "std-env": "^3.8.1",
    "telegraf": "^4.16.3",
    "telegraf-safe-md-reply": "^1.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}